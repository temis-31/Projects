<%- include("./partials/header.ejs") -%>
    <h1>Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <div class="mb-3">
                <label for="FormControlInput" class="form-label">Title</label>
                <input type="text" class="form-control" name="postTitle" autocomplete="off" />
            </div>
            <div class="mb-3">
                <label for="FormControlTextarea" class="form-label">Post</label>
                <textarea name="postBody" rows="5" cols="30" class="form-control"></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-primary" name="button">Publish</button>
    </form>

    <%- include("./partials/footer.ejs") -%>